{% extends 'base.html.twig' %}

{% block title %}User Management{% endblock %}

{% block body %}
<div class="container mt-7">
    <h2 class="text-center">User Management</h2>

    {# Flash Messages for User Actions #}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success text-center alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    <table class="table table-striped mt-3">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.firstName }}</td>
                    <td>{{ user.lastName }}</td>
                    <td>{{ user.email }}</td>
                    <td>
                        {% if user.isLocked %}
                            <span class="text-danger">Locked 🔒</span>
                        {% else %}
                            <span class="text-success">Active ✅</span>
                        {% endif %}
                    </td>
                    <td>
                        {% if app.user.id != user.id %}
                        <a href="{{ path('app_admin_toggle_lock', {'id': user.id}) }}" class="btn btn-warning btn-sm">
                            {% if user.isLocked %}
                                Unlock 🔓
                            {% else %}
                                Lock 🔒
                            {% endif %}
                        </a>
                        <a href="{{ path('app_admin_delete_user', {'id': user.id}) }}" class="btn btn-danger btn-sm">
                            Delete ❌
                        </a>
                        {% endif %}
                        {% if app.user.id != user.id %}
                            <a href="{{ path('app_admin_toggle_admin', {'id': user.id}) }}"
                            class="btn btn-sm {% if 'ROLE_ADMIN' in user.roles %}btn-secondary{% else %}btn-info{% endif %}">
                                {% if 'ROLE_ADMIN' in user.roles %}
                                    Revoke Admin ❌
                                {% else %}
                                    Make Admin 🛡️
                                {% endif %}
                            </a>
                        {% endif %}
                    </td>                    
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
