{% extends 'base.html.twig' %}

{% block title %}Mes Invitations{% endblock %}

{% block body %}
    <div class="container mt-7">
        <h1 class="text-center mb-4">Mes Invitations</h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success text-center">{{ message }}</div>
        {% endfor %}

        <div id="invitations" class="row justify-content-center">
            {% for invitation in pending_invitations %}
                <div class="col-12 mb-4">
                    <div class="card h-100 shadow-lg w-100">
                        <div class="card-header text-white {% if invitation.status %}bg-success{% else %}bg-warning{% endif %}">
                            <h5 class="card-title mb-0">{{ invitation.wishlist.name }}</h5>
                        </div>
                        <div class="card-body d-flex justify-content-between align-items-center">
                            <div class="flex-grow-1">
                                <p class="card-text"><strong>PropriÃ©taire :</strong> {{ invitation.wishlist.owner.firstName }} {{ invitation.wishlist.owner.lastName }}</p>
                                <p class="card-text"><strong>Statut :</strong> {% if invitation.status %}âœ… AcceptÃ©e{% else %}ðŸ•“ En attente{% endif %}</p>
                            </div>
                            <div class="btn-group">
                                <a href="{{ path('app_invitation_accept', {'id': invitation.wishlist.id, 'userId': invitation.invitedUser.id}) }}" class="btn btn-success">Accepter</a>
                                <a href="{{ path('app_invitation_decline', {'id': invitation.wishlist.id, 'userId': invitation.invitedUser.id}) }}" class="btn btn-danger">Refuser</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12 text-center text-muted">
                    <h4>Aucune invitation en attente.</h4>
                    <p>Vous n'avez actuellement aucune invitation en attente.</p>
                </div>
            {% endfor %}
        </div>
    </div>

    <style>
        .card {
            border-radius: 8px;
            transition: transform 0.2s ease, box-shadow 0.2s ease;
            margin: 0 1rem;
        }

        .card:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
        }

        .card-header {
            font-size: 1.2rem;
            font-weight: bold;
            padding: 0.75rem 1.25rem;
            border-top-left-radius: 8px;
            border-top-right-radius: 8px;
        }

        .btn-group .btn {
            margin: 0 5px;
            padding: 0.5rem 1.25rem;
            font-size: 1rem;
        }

        .btn-success:hover, .btn-danger:hover {
            transform: translateY(-2px);
        }

        .btn-success {
            background-color: #28a745;
            color: white;
        }

        .btn-danger {
            background-color: #dc3545;
            color: white;
        }

        .btn-group {
            gap: 0.5rem;
        }

        .shadow-lg {
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
        }
    </style>
{% endblock %}