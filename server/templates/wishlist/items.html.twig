{% extends 'base.html.twig' %}

{% block title %}Wishlist Items{% endblock %}

{% block body %}
<div class="container mt-5">
    <h2 class="mb-4">Items in "{{ wishlist.name }}"</h2>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">{{ message }}</div>
    {% endfor %}

    <a href="{{ path('app_wishlist_add_item', {id: wishlist.id, wishlist: wishlist}) }}" class="btn btn-primary mb-3">Add New Item</a>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Price</th>
                <th>URL</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for item in wishlist.items %}
                <tr>
                    <td>{{ item.title }}</td>
                    <td>{{ item.description }}</td>
                    <td>${{ item.price }}</td>
                    <td><a href="{{ item.url }}" target="_blank">Buy Here</a></td>
                    <td>
                        <a href="{{ path('app_item_edit', {id: item.id}) }}" class="btn btn-warning btn-sm">Edit</a>
                        <form action="{{ path('app_item_delete', {id: item.id}) }}" method="post" style="display:inline;">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ item.id) }}">
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?');">Delete</button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr><td colspan="5" class="text-center">No items yet.</td></tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}